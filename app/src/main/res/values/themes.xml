<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SlamStatsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Cambia a NoActionBar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PlayerTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/red_nba</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Theme.FadingTrophies" parent="Theme.AppCompat.Light">
        <item name="android:colorEdgeEffect">@color/blue_nba</item>
    </style>
</resources>